# ============================================
# CONFIGURACION MQTT
# ============================================
# El broker debe ser el mismo que usa el ESP32 (config.h)
# HiveMQ Cloud con TLS
MQTT_BROKER=tu-broker.hivemq.cloud
MQTT_PORT=8883
MQTT_USER=tu_usuario
MQTT_PASS=tu_password
MQTT_KEEPALIVE=60
MQTT_CLIENT_ID=alarma_telegram_bridge
MQTT_USE_TLS=true

# ============================================
# CONFIGURACION TELEGRAM
# ============================================
# Token del bot (obtenido de @BotFather)
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Chat ID del administrador principal (opcional, se configura con /start)
TELEGRAM_ADMIN_CHAT_ID=

# ============================================
# CONFIGURACION DEL DISPOSITIVO
# ============================================
# Dejar vacio para auto-detectar del primer mensaje ESP32
# O especificar si conoces el device_id de tu ESP32
DEVICE_ID=

# ============================================
# FIREBASE (Opcional)
# ============================================
# Ruta al archivo de credenciales de Firebase
# Descargalo desde: Firebase Console > Configuracion > Cuentas de servicio
# Si no se configura, se usara almacenamiento local
FIREBASE_CREDENTIALS=firebase_credentials.json

# ============================================
# DEBUG Y LOGS
# ============================================
DEBUG=true
LOG_FILE=alarm_service.log
